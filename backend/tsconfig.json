{
  "compilerOptions": {
    "watch": true,
    "target": "ESNEXT",
    "module": "commonjs",
    // "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */,
  },
  "include": [
    "src/**/*", "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
}