  "version": "0.2.0",
  "configurations": [



    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "remoteRoot": "/usr/src/app",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "protocol": "inspector",
      "restart": true
    },

    {
      "name": "Launch Node.js in Docker (Broken)",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "Run Docker Container",
      "platform": "node"
    },

    {
      "name": "Launch Node.js in Docker",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      // "runtimeExecutable": "npm",
      // "runtimeArgs": [
      //   "run-script",
      //   "debug"
      // ],
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app"
    },
    
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/index.js"
    }
  ]
}